{
  "ui_font_size": 16,
  "buffer_font_size": 18,
  "vim_mode": true,
  "relative_line_numbers": true,
  "scrollbar": {
    "show": "never"
  },
  "project_panel": {
    "button": true,
    "dock": "right",
    "git_status": true
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "fixed"
  },
  "cursor_blink": false,
  "buffer_font_fallbacks": ["MesloLGS NF"],
  "highlight_on_yank": true,
  "use_autoclose": true,
  "autosave": {
    "after_delay": {
      "milliseconds": 500
    }
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Mocha"
  },
  
  "lsp": {
    
    "jdtls": {
      "settings": {
        "version": "1.40.0", // jdtls version to download and use
        "classpath": "/path/to/classes.jar:/path/to/more/classes/"
      },
      "initialization_options": {}
    },
  }
}
